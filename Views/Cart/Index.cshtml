@model IEnumerable<sem3.Models.Cart>

@{
    ViewData["Title"] = "Cart";
    double totalPrice = 0;
}

<div class="page-title-area">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                <h2>Cart</h2>
            </div>
        </div>
    </div>

    <div class="shape1"><img src="~/assets/img/shape1.png" alt="shape"></div>
    <div class="shape2 rotateme"><img src="~/assets/img/shape2.svg" alt="shape"></div>
    <div class="shape3"><img src="~/assets/img/shape3.svg" alt="shape"></div>
    <div class="shape4"><img src="~/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape5"><img src="~/assets/img/shape5.png" alt="shape"></div>
    <div class="shape6 rotateme"><img src="~/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape7"><img src="~/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape8 rotateme"><img src="~/assets/img/shape2.svg" alt="shape"></div>
</div>
<!-- End Page Title -->
<!-- Start Cart Area -->
<div class="cart-area ptb-80">
    <div class="container">
        <div class="row">
             @if (TempData["yes"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["yes"]
                        </div>
                    }
            <div class="col-lg-12 col-md-12">
                <form>
                    <div class="cart-table table-responsive">
                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <th scope="col">Product</th>
                                <th scope="col">Name</th>
                                <th scope="col">Unit Price</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Total</th>
                            </tr>
                            </thead>

                            <tbody>
                            @if (@Model.Count() > 0)
                            {
                                @foreach (Cart cart in @Model)
                                {
                                    <tr>
                                        <td class="product-thumbnail">
                                            <a href="#">
                                                <img src="~/uploads/@cart.Product.Image" alt="item">
                                            </a>
                                        </td>

                                        <td class="product-name">
                                            <a href="#">@cart.Product.Name</a>
                                        </td>

                                        <td class="product-price">
                                            <span class="unit-amount">$@cart.Price.ToString("N")</span>
                                        </td>

                                        <td class="product-quantity">
                                            <div class="input-counter">
                                                <span class="minus-btn"><i data-feather="minus"></i></span>
                                                <input type="text" min="1" value="@cart.Quantity">
                                                <span class="plus-btn"><i data-feather="plus"></i></span>
                                            </div>
                                        </td>

                                        <td class="product-subtotal">
                                            <span class="subtotal-amount">$@cart.TotalPrice.ToString("N")</span>

                                            <a asp-controller="Cart" asp-action="Delete" asp-route-id="@cart.ProductId" class="remove"><i data-feather="trash-2"></i></a>
                                        </td>
                                    </tr>
                                    totalPrice += cart.TotalPrice;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6">
                                    <h3 class="text-center">No Data</h3>
                                    </td>
                                </tr>
                            }

                            </tbody>
                        </table>
                    </div>

                    <div class="cart-buttons">
                        <div class="row align-items-center">
                            <div class="col-lg-7 col-md-7 col-sm-7">
                                <div class="continue-shopping-box">
                                    <a asp-controller="Home" asp-action="Product" class="btn btn-light">Continue Shopping</a>
                                </div>
                            </div>

                            <div class="col-lg-5 col-md-5 col-sm-5 text-end">
                                 @if (@Model.Count() > 0)
                                 {
                                     <button class="btn btn-light">Update Cart</button>
                                 }
                            </div>
                        </div>
                    </div>

                    <div class="cart-totals">
                        <h3>Cart Totals</h3>

                        <ul>
                            <li>Subtotal <span>$ @totalPrice.ToString("N")</span></li>
                            <li>Shipping <span>$0</span></li>
                            <li>Total <span><b>$ @Model.Sum(x => x.TotalPrice).ToString("N")</b></span></li>
                        </ul>
                         @if (@Model.Count() > 0)
                         {
                             <a asp-controller="Checkout" asp-action="Index" class="btn btn-primary">Proceed to Checkout</a>
                         }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

