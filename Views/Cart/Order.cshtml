@model sem3.Models.Order;
@{
    ViewData["Title"] = "Đặt hàng";
}

<h2>Giỏ hàng</h2>
@if (TempData["yes"] != null)
{
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <strong>Title!</strong> @TempData["yes"]
    </div>
}
<form method="post" asp-action="Checkout">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="">Họ tên khách hàng</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Input field">
            </div>
            <div class="form-group">
                <label for="">Số ĐT khách hàng</label>
                <input type="text" class="form-control" asp-for="Email" placeholder="Input field">
            </div>
            <div class="form-group">
                <label for="">Email khách hàng</label>
                <input type="text" class="form-control" asp-for="Phone" placeholder="Input field">
            </div>
            <div class="form-group">
                <label for="">Địa chỉ khách hàng</label>
                <input type="text" class="form-control" asp-for="Address" placeholder="Input field">
            </div>
            <hr />
            <div class="text-right">
                <button class="btn btn-success">Đặt hàng</button>
            </div>
        </div>
        <div class="col-md-8">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Iamge</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Cart cart in ViewBag.carts)
                    {
                        <tr>
                            <td>
                        <input type="hidden" name="productIds" value="@cart.ProductId" />
                            <img src="~/uploads/@cart.Product.Image" width="50" />
                            </td>
                            <td>@cart.Product.Name</td>
                            <td>@cart.Price</td>
                            <td>@cart.Quantity</td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

  
</form>