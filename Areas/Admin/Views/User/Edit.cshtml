@model sem3.Models.User

@{
    ViewData["Name"] = "Edit Blog";
}

<div class="page-wrapper">
    <div class="page-content">

        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-Name pe-3">Blog</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;">
                                <i class="bx bx-home-alt"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Edit Blog</li>
                    </ol>
                </nav>
            </div>

        </div>
        <!--end breadcrumb-->

        <div class="card">
            <div class="card-body p-4">
                <h5 class="card-Name">AEdit Blog</h5>
                <hr/>
                <div class="form-body mt-4">
                    <form asp-action="Edit" enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id"/>
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="border border-3 p-4 rounded">
                                    <div class="mb-3">
                                        <label asp-for="Name" class="form-label">Product Name</label>
                                        <input asp-for="Name" type="text" class="form-control" id="inputProductName" placeholder="Enter product Name">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="Email" class="form-label">Email</label>
                                        <input asp-for="Email" class="form-control" id="inputProductEmail" type="text" rows="3"/>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="Password" class="form-label">Password</label>
                                        <input asp-for="Password" class="form-control" id="Password" type="password" rows="3"/>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div> 
                                    <div class="mb-3">
                                        <label asp-for="Address" class="form-label">Address</label>
                                        <input asp-for="Address" class="form-control" type="text" id="Address" rows="3"/>
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div> 
                                    <div class="mb-3">
                                        <label asp-for="Phone" class="form-label">Phone</label>
                                        <input asp-for="Phone" class="form-control" type="text" id="Phone" rows="3"/>
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-light">Save User</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><!--end row-->
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>