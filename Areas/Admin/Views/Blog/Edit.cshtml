@model sem3.Models.Blog

@{
    ViewData["Title"] = "Edit Blog";
}

<div class="page-wrapper">
    <div class="page-content">

        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Blog</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;">
                                <i class="bx bx-home-alt"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Edit Blog</li>
                    </ol>
                </nav>
            </div>

        </div>
        <!--end breadcrumb-->

        <div class="card">
            <div class="card-body p-4">
                <h5 class="card-title">AEdit Blog</h5>
                <hr/>
                <div class="form-body mt-4">
                    <form asp-action="Edit" enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id"/>
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="border border-3 p-4 rounded">
                                    
                                    <div class="form-group">
                                        <label asp-for="Image" class="control-label">Blog Images</label>
                                        <input type="file" class="form-control"/>
                                        <input asp-for="Image" type="hidden" class="form-control"/>
                                        <span asp-validation-for="Image" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="Title" class="form-label">Blog Title</label>
                                        <input asp-for="Title" type="text" class="form-control" id="inputProductTitle" placeholder="Enter product title">
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="Description" class="form-label">Description</label>
                                        <textarea asp-for="Description" class="form-control" id="inputProductDescription" rows="3"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="SubDescription" class="form-label">Sub Description</label>
                                        <textarea asp-for="SubDescription" class="form-control" id="inputProductDescription" rows="3"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-light">Save Blog</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><!--end row-->
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>